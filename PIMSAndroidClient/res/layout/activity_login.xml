<?xml version="1.0" encoding="utf-8"?>
<!--登录界面,用LinearLayout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">
    <!--标题栏
    <include layout="@layout/main_title_bar"></include> -->

    <!--显示头像，记得加入id iv_head -->
    <!--  使用ImageView实现头像，矩形
    <ImageView
        android:id="@+id/iv_head1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/timg"/>-->
        
    <!--  使用自定义控件实现头像，圆形 -->
    <com.mosorg.pims.app.common.utils.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/head_img" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/text_account_tv_activity_login"
            android:textSize="16sp" 
            android:textColor="@color/white"/>


        <EditText
            android:id="@+id/login_account"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/account_name"
            android:gravity="center_vertical"
            android:hint="@string/tip_account_et_activity_login"
            android:paddingLeft="5dp"
            android:singleLine="true" 
            android:background="@drawable/bt_shape"/>


        <TextView
            android:id="@+id/password_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/login_account"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="@string/text_password_tv_activity_login"
            android:textSize="16sp" 
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_account"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/password_name"
            android:gravity="center_vertical"
            android:hint="@string/tip_password_et_activity_login"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:singleLine="true" 
            android:background="@drawable/bt_shape"/>


        <Button
            android:id="@+id/login_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_password"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/text_loginbt_activity_login"
            android:textSize="16sp" 
            android:background="@drawable/bt_shape"/>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_password"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/login_btn"
            android:gravity="center"
            android:text="@string/text_registerbt_activity_login"
            android:textSize="16sp" 
            android:background="@drawable/bt_shape"/>
    </RelativeLayout>

</LinearLayout>