<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" 
        android:background="@color/red"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/text_account_tv_activity_login"
            android:textSize="16sp" 
            android:textColor="@color/white"/>


        <EditText
            android:id="@+id/login_account"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/account_name"
            android:gravity="center_vertical"
            android:hint="@string/tip_account_et_activity_login"
            android:paddingLeft="5dp"
            android:singleLine="true" 
            android:background="@color/white"/>


        <TextView
            android:id="@+id/password_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/login_account"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="@string/text_password_tv_activity_login"
            android:textSize="16sp" 
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_account"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/password_name"
            android:gravity="center_vertical"
            android:hint="@string/tip_password_et_activity_login"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:singleLine="true" 
            android:background="@color/white"/>


        <Button
            android:id="@+id/login_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_password"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/text_loginbt_activity_login"
            android:textSize="16sp" 
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/login_password"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/login_btn"
            android:gravity="center"
            android:text="@string/text_registerbt_activity_login"
            android:textSize="16sp" 
            android:textColor="@color/white"/>
    </RelativeLayout>

</LinearLayout>